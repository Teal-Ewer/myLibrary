<%- include('../partials/html-head') %> 
<%- include('../partials/nav') %>


<main class="container my-3">
	<h1><%= isSelf ? "My" : profile.name.split(" ")[0].concat("'s") %> Shelf</h1>

	<% if (profile.bookshelf.length === 0) { %> 
		<h2><%= isSelf ? "You don't" : profile.name.split(" ")[0].concat(" doesn't") %> have any books yet!</h2>
	<% } else { %>

		<div class="row pt-2">
		<% profile.bookshelf.forEach(book => { %> 
		<div class="card col-12 col-sm-6 col-lg-4 col-xl-3 p-1">
			<div class="row">
				<img src="<%= book.cover %> " class="rounded-start col-6 pr-1" alt="..." />
				<div class="col-6 pl-1">
					<h5 class="card-title"><%= book.title %></h5>
					<p class="card-title"><b>
						<%= book.authors.join(", ").substring(0, 80) %>
					</b></p>
					<form action="/books/<%= book._id %>" method="GET">
						<button class="btn btn-success">Details</button>
					</form>
				</div>
			</div>
			<div class="card-body col-12 row">
				<h6>
					Available from: <%= book.availableFrom.length %> <%=
					book.availableFrom.length === 1 ? "user" : "users" %>
				</h6>
				<p class="card-text">
					<%= book.description.substring(0, 200).concat("...") %>
				</p>
			</div>
		</div>
		<% }) %>
	</div>
	<% } %> 
</main>


</main>

<%- include('../partials/footer') %>