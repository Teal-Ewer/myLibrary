<%- include('../partials/html-head') %> 
<link rel="stylesheet" href="/stylesheets/siwg.css">
<%- include('../partials/nav') %>

<main class="container">
	<div class="d-flex flex-row flex-wrap justify-content-around">
		<% profiles.forEach(profile => { %>
			<div class="m-2">
				<div class="card" style="width: 8rem; height: 12rem;">
					<a class="text-decoration-none hover-none" href="/profiles/<%= profile._id %>">
							<% if (profile.avatar) { %>
										<img
											class="card-img-top"
											src="<%= profile.avatar %>"
											alt="<%= profile.name %>'s avatar"
											width="100%"
										/>
										<% } else {%>
										<img
											class="card-img-top"
											src="/images/icons/user.png"
											alt="A placeholder avatar"
											width="100%"
										/>
										<% } %>
						<div class="card-body p-1 d-flex align-items-center justify-content-center">
							<h6 class="card-title text-dark"><%= profile.name %></h6>
						</div>
					</a>
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</main>


<%- include('../partials/footer') %>
