<%- include('../partials/html-head') %>
<link rel="stylesheet" href="../../public/stylesheets/style.css" />
<%- include('../partials/nav') %>

<main class="container">
	<div class="my-3 row">
		<h1 class="d-inline-block">All Books</h1>
		<form action="/books/find">
			<div class="input-group">
				<input
					type="text"
					class="form-control"
					name="search"
					autocomplete="off"
					placeholder="Find a book"
					required
				/>
				<div class="input-group-append">
					<button class="input-group-text btn btn-primary">Search</button>
				</div>
			</div>
		</form>
	</div>

	<div class="row">
		<% books.forEach(book => { %>
		<div class="card col-12 col-sm-6 col-lg-4 col-xl-3 p-2">
			<div class="row">
				<img src="<%= book.cover %> " class="rounded-start col-6" alt="..." />
				<div class="col-6">
					<h5 class="card-title"><%= book.title %></h5>
					<h6 class="card-title">
						<%= book.authors.join(", ").substring(0, 80) %>
					</h6>
					<form action="/books/<%= book._id %>" method="GET">
						<button class="btn btn-success">Details</button>
					</form>
				</div>
			</div>
			<div class="card-body col-12 row">
				<h6>
					Available from: <%= book.availableFrom.length %> <%=
					book.availableFrom.length === 1 ? "user" : "users" %>
				</h6>
				<p class="card-text">
					<%= book.description.substring(0, 200).concat("...") %>
				</p>
			</div>
		</div>
		<% }) %>
	</div>
</main>

<%- include('../partials/footer') %>
