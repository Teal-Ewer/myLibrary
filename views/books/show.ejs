<%- include('../partials/html-head') %> <%- include('../partials/nav') %>

<main class="container">
	<div class="d-flex mt-3">
		<div class="card col-6 p-2">
			<div class="row pr-1">
				<img src="<%= book.cover %>" class="card-img-top col-4" alt="..." />
				<div class="col-8">
					<div class="row">
						<h2 class="card-title"><%= book.title %></h2>
					</div>
					<div class="row">
						<h4 class="card-title"><%= book.authors.join(", ") %></h4>
					</div>
					<% if (book.ownedBy.includes(user.profile._id)) { %>
					<div class="row">
						<form action="/books/<%= book._id %>?_method=DELETE" method="POST">
							<button class="btn btn-danger btn-sm">Delete Book</button>
						</form>
					</div>
						<% if (book.availableFrom.includes(user.profile._id)) { %>
						<div class="row pt-2">
							<h5>Lend your copy:</h5>
						</div>
						<div class="row pt-2">
							<form
								class="form-group"
								action="/books/<%= book._id %>/updateAvailability"
								method="GET"
							>
								<button class="btn btn-success btn-sm ml-1">Lend Book</button>
							</form>
						</div>

						<% } else {%>
						<div class="row pt-2">
							<h5>Your copy is checked out:</h5>
						</div>
						<div class="row pt-2">
							<form
								class="form-group"
								action="/books/<%= book._id %>/updateAvailability"
								method="GET"
							>
								<button class="btn btn-success btn-sm ml-1">Return Book</button>
							</form>
						</div>
						<% } %> 
					
					<% } else { %>
					<form action="/books/<%= book._id %>/update" method="GET">
						<button class="btn btn-primary">Add</button>
					</form>
					<% } %>
				</div>
			</div>

			<div class="row">
				<div class="card-body col-12">
					<p>Available from: <b>Teal, Mike</b></p>
					<p class="card-text"><%= book.description %></p>
				</div>
			</div>
		</div>

<%# left card ends %> 

		<div class="card col-6">
			<div class="card-body">
				<h2 class="card-title">Reviews</h2>
				<form action="/reviews/<%= book._id %>/new" method="POST">
					<div class="form-group">
						<label for="reviewContent">Leave a Review:</label>
						<input type="number" name="rating" required min="0" max="5">
						<label for="rating"> / 5</label>
						<textarea class="form-control" id="reviewContent" rows="3" name="content" required></textarea>
					</div>
					<div class="text-right">
						<input type="submit" class="btn btn-primary">
					</div>
				</form>
				<% book.reviews.forEach(review => { %>
				 <div class="card mt-2">
					 <div class="card-body">
						 <p><%= review.content %> </p>
						 <div class="row">
							 <% if (true) { %>
							<div class="text-left">
								<form action="/reviews/<%= review._id %>?_method=DELETE" method="POST">
									<button class="btn btn-sm btn-danger" type="submit">Delete</button>
								</form>	
							</div>
							<% } %>
							<p class="text-right">-<%= review.reviewer.name %></p>
						</div>
					 </div>
				 </div>
				<% }) %> 
			</div>
		</div>


	</div>
</main>

<%- include('../partials/footer') %>
