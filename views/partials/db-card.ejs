<div
  class="card p-1 col-md-6 col-lg-4" 
  style="
    background-image: linear-gradient(to top right, #fdfdfd, #d5dfe7);
    height: 21rem;
  "
>
  <div class="d-flex flex-nowrap">
    <img
      src="<%= book.cover %> "
      class="rounded-start pr-1"
      alt="..."
      style="max-height: 12rem"
    />
    <div class="pl-1 d-flex flex-column justify-content-between">
      <h5 class="card-title"><%= book.title %></h5>
      <p class="card-title">
        <b> <%= book.authors.join(", ").substring(0, 80) %> </b>
      </p>
      <form action="/books/<%= book._id %>" method="GET">
        <button class="btn btn-primary">Details</button>
      </form>
      <h6>
        Available from: <%= book.availableFrom.length %> <%=
        book.availableFrom.length === 1 ? "friend" : "friends" %>
      </h6>
    </div>
  </div>
  <div class="card-body col-12 row">
    <p class="card-text d-flex align-items-center">
      <%= book.description.length < 140 ? book.description :
      book.description.substring(0, 140).concat("...") %>
    </p>
  </div>
</div>

