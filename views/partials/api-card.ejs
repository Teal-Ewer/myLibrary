<div class="col px-2">
  <div
    class="card my-2 p-2" 
    style="
      min-width: 20rem;
			max-width: 32rem;
			min-height: 20rem;
		"
  >
    <div class="d-flex flex-nowrap">
      <img
        src="<%= bookCover %> "
        class="rounded-start pr-1"
        alt="..."
        style="max-height: 12rem"
      />
      <div class="pl-3 pl-lg-1 d-flex flex-column justify-content-between">
        <h4 class="card-title fs-1"><%= bookTitle %></h4>
        <h6 class="card-title">
          <%= bookAuthor %>
        </h6>
        <form action="/books/<%= bookId %>" method="POST">
          <button class="btn btn-success">Add</button>
        </form>
      </div>
    </div>
    <div class="card-body pt-3 p-1 col-12">
      <p class="card-text line-clamp">
        <%= bookDescription %>
      </p>
    </div>
  </div>
</div>